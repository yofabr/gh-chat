{
  "manifest_version": 3,
  "name": "GitHub Chat",
  "version": "1.0.0",
  "description": "Send messages to GitHub users directly from their profile",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://github.com/*"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
